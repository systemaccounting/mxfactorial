{
	"name": "mxfactorial",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"env": "make get-secrets ENV=local && make prefix-env-vars",
		"dev": "npm run env ENV=local && vite dev --host 0.0.0.0",
		"build": "vite build",
		"preview": "npm run env ENV=local && vite preview --host 0.0.0.0",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:all": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "npm run env ENV=local && playwright test",
		"test-ci": "npm run env ENV=local && playwright test --reporter=list",
		"test": "npm run test:e2e"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@fortawesome/fontawesome-common-types": "^6.7.1",
		"@fortawesome/free-solid-svg-icons": "^6.7.1",
		"@googlemaps/js-api-loader": "^1.16.8",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.17.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/base-64": "^1.0.2",
		"@types/google.maps": "^3.58.1",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^22.10.1",
		"@urql/core": "^5.1.0",
		"amazon-cognito-identity-js": "^6.3.12",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.7",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"graphql": "^16.9.0",
		"graphql-ws": "^5.16.0",
		"js-cookie": "^3.0.5",
		"npm": "^10.9.2",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.20.0",
		"svelte-check": "^4.0.0",
		"svelte-fa": "^4.0.3",
		"svelte-loading-spinners": "^0.3.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"url": "^0.11.4",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	}
}
