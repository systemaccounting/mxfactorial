{
	"name": "mxfactorial",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"env": "make get-secrets ENV=local && make prefix-env-vars",
		"dev": "npm run env ENV=local && vite dev --host 0.0.0.0",
		"build": "vite build",
		"preview": "npm run env ENV=local && vite preview --host 0.0.0.0",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:all": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "npm run env ENV=local && playwright test",
		"test-ci": "npm run env ENV=local && playwright test --reporter=list",
		"test": "npm run test:e2e"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@fortawesome/fontawesome-common-types": "^7.1.0",
		"@fortawesome/free-solid-svg-icons": "^7.1.0",
		"@googlemaps/js-api-loader": "^2.0.2",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.17.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/base-64": "^1.0.2",
		"@types/google.maps": "^3.58.1",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^25.0.8",
		"@urql/core": "^6.0.1",
		"amazon-cognito-identity-js": "^6.3.12",
		"dayjs": "^1.11.13",
		"dotenv": "^17.2.3",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"graphql": "^16.9.0",
		"graphql-ws": "^6.0.6",
		"js-cookie": "^3.0.5",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.20.0",
		"svelte-check": "^4.0.0",
		"svelte-fa": "^4.0.3",
		"svelte-loading-spinners": "^0.3.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	}
}
