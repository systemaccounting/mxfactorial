// rules
query rules($input: [TransactionInputType]!) {
  rules(transactions: $input) {
      name
      price
      quantity
      author
      debitor
      creditor
      rule_instance_id
  }
}

{
  "input": [
    {
      "name": "milk",
      "price": "3.00",
      "quantity": "2",
      "debitor": "Person1",
      "creditor": "Person2",
      "author": "Person2"
    }
  ]
}

// ruleInstances

query ruleInstances($input: [String]!) {
  ruleInstances(keySchema: $input) {
    key_schema
    rule_instance_id
    description
    rule
  }
}

{
  "input": ["name:"]
}


// createRequest
mutation createRequest($input: [RequestCreateInputType]!) {
  createRequest(items: $input) {
    author
    debitor
    debitor_approval_time
    creditor
    creditor_approval_time
    name
    price
    quantity
    rule_instance_id
    transaction_id
    id
  }
}

{
  "input": [
    {
      "author": "JoeSmith",
      "creditor": "JoeSmith",
      "debitor": "Person1",
      "name": "Milk",
      "price": "3",
      "quantity": "2"
    },
    {
      "author": "JoeSmith",
      "debitor": "Person1",
      "creditor": "StateOfCalifornia",
      "name": "9% state sales tax",
      "price": "0.540",
      "quantity": "1",
      "rule_instance_id": "8f93fd20-e60b-11e9-a7a9-2b4645cb9b8d"
    }
	]
}

// approveRequest
mutation approveRequest($input: [RequestApproveInputType]!) {
  approveRequest(items: $input) {
    author
    debitor
    debitor_approval_time
    creditor
    creditor_approval_time
    name
    price
    quantity
    rule_instance_id
    transaction_id
    id
  }
}

